<div id="sessions">
	<h1>Sign in</h1>

		<div class="signin-form">
			<%= form_for(:session, url: sessions_path) do |f| %>

			<p><%= f.label :email %></p>
  		<p><%= f.text_field :email %></p>

  		<p><%= f.label :password %></p>
  		<p><%= f.password_field :password %></p>

	 		<p><%= f.submit "Login", class: "signin-button" %></p>

 			<% end %>
 		</div>	
</div> 	