<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @post.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :annotation %>
    <%= f.text_area :annotation %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>
<% end %>
